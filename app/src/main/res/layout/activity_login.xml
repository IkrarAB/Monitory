<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitethree"
    tools:context=".Login">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:layout_above="@id/separator">

        <Button
            android:id="@+id/btn_masuk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginHorizontal="30dp"
            android:background="@drawable/custom1"
            android:text="Masuk"
            android:onClick="pindahKeBiodata"
            android:fontFamily="@font/nunito_bold"
            />

        <TextView
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/txt2"
            android:textSize="11sp"
            android:textColor="@color/black"
            android:text="Dengan menekan tombol masuk berarti Anda menyetujui"
            android:fontFamily="@font/rubik_regular"/>

        <TextView
            android:id="@+id/txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_centerHorizontal="true"
            android:textSize="11sp"
            android:textColor="@color/black"
            android:layout_above="@id/btn_masuk"
            android:text="@string/ketentuan"
            android:fontFamily="@font/rubik_regular"/>

        <EditText
            android:id="@+id/editkode"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginBottom="25dp"
            android:background="@drawable/custom2"
            android:layout_centerHorizontal="true"
            android:layout_above="@id/txt1"
            android:gravity="center"
            android:hint="A1B2C3"
            android:textColorHint="@color/black"
            android:fontFamily="@font/nunito_bold"
            />

        <TextView
            android:id="@+id/txtkodekeluarga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/editkode"
            android:layout_alignStart="@id/editkode"
            android:layout_above="@id/txtdisini"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:fontFamily="@font/rubik_regular"
            android:text="Ketikkan kode keluarga yang Ayah Bunda"
            />

        <TextView
            android:id="@+id/txtdisini"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/editkode"
            android:layout_alignStart="@id/editkode"
            android:layout_above="@id/editkode"
            android:layout_marginBottom="25dp"
            android:textSize="17sp"
            android:textColor="@color/black"
            android:fontFamily="@font/rubik_regular"
            android:text="miliki disini"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_alignLeft="@id/txtkodekeluarga"
            android:layout_alignStart="@id/txtkodekeluarga"
            android:layout_above="@id/txtkodekeluarga"
            android:text="Kode Keluarga"
            android:fontFamily="@font/rubik_regular"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/black"

            />

    </RelativeLayout>

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/coolgrey"
        android:layout_above="@id/relativelayout2"/>

    <RelativeLayout
        android:id="@+id/relativelayout2"
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white">

        <Button
            android:id="@+id/btn_belikode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="30dp"
            android:background="@drawable/custom3"
            android:layout_marginBottom="30dp"
            android:text="Beli Kode Keluarga Disini"
            android:textColor="@color/white"
            android:fontFamily="@font/nunito_bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Belum punya kode keluarga?"
            android:textColor="@color/gunmetal"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:fontFamily="@font/rubik_regular"
            android:textSize="19sp"
            android:layout_above="@id/btn_belikode"
            />

    </RelativeLayout>

</RelativeLayout>